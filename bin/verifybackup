#!/bin/bash

# check if duplicity command exists
if [ ! `which duplicity` > /dev/null ]
then
	echo "The command duplicity does not exist. Please install it first and then run $0 again." 1>&2
	exit 1
fi

if [ $# -ne 2 ];
then
	echo "Usage:    $0 backup_root backup_location" 1>&2
	echo "Examples: $0 /mnt/backup /home/user/Documents" 1>&2
	exit 1
fi

backuproot=`readlink -f "$1"`
localpath=`readlink -f "$2"`

duplicity collection-status file://$backuproot$localpath
