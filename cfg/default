# logfile
logfile="/var/log/backup/backup_`date +"%Y-%m-%d_%H-%M-%S"`.log"

# dump mysql database to this file
mysql_dumpfile=/root/Documents/mysqlbackup/dump.sql
mysql_user=root
mysql_passwd=foobar

# path of backup
backupdir=/mnt/backup

# exclude backup locations
exclude=(
/dev
/mnt
/proc
/root/.cache/duplicity
/sys
/tmp
)

# number of backup chains to keep
keep_backups=4

# email recipient
email=foo@bar.com
